{
  "name": "tssv",
  "type": "module",
  "version": "1.0.0",
  "description": "Typescript based SystemVerilog meta-language and HDL design framework",
  "main": "./out/src/TSSV.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "docs": "typedoc --out docs",
    "deploy-docs": "gh-pages -d docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TypeScriptSystemVerilog/TSSV.git"
  },
  "keywords": [
    "Typescript",
    "SystemVerilog",
    "Verilog",
    "HDL"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TypeScriptSystemVerilog/TSSV/issues"
  },
  "exports": {
    "./lib/*": "./out/src/*.js",
    "./test/*": "./out/test/*.js"
  },
  "typesVersions": {
    "*": {
      "lib/*": [
        "out/src/*"
      ],
      "test/*": [
        "out/test/*"
      ]
    }
  },
  "homepage": "https://github.com/TypeScriptSystemVerilog/TSSV#readme",
  "devDependencies": {
    "@types/deep-diff": "^1.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.11.22",
    "eslint": "^8.57.0",
    "gh-pages": "^6.1.1",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "deep-diff": "^1.0.2",
    "eslint-config-love": "^43.1.0",
    "fast-xml-parser": "^4.4.0",
    "jsdom": "^24.1.0",
    "typedoc": "^0.25.12",
    "typedoc-plugin-missing-exports": "^2.2.0",
    "typescript-eslint": "^7.4.0",
    "wavedrom": "^3.5.0"
  }
